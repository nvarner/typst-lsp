{
    "name": "typst-lsp",
    "description": "A language server for Typst",
    "repository": {
        "type": "git",
        "url": "https://github.com/nvarner/typst-lsp"
    },
    "displayName": "Typst LSP",
    "icon": "icons/typst.png",
    "author": "Nathan Varner",
    "publisher": "nvarner",
    "license": "Apache-2.0 OR MIT",
    "version": "0.1.1",
    "engines": {
        "vscode": "^1.75.0"
    },
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Typst LSP configuration",
            "properties": {}
        },
        "languages": [
            {
                "id": "typst",
                "configuration": "./language-configuration.json",
                "extensions": [
                    ".typ"
                ],
                "aliases": [
                    "Typst"
                ],
                "icon": {
                    "light": "./icons/typst.svg",
                    "dark": "./icons/typst.svg"
                }
            }
        ],
        "grammars": [
            {
                "language": "typst",
                "scopeName": "source.typst",
                "path": "./typst.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "build-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --target=node16",
        "vscode:prepublish": "npm run build-base -- --minify",
        "package": "vsce package",
        "compile": "npm run build-base -- --sourcemap",
        "watch": "npm run build-base -- --sourcemap --watch",
        "check": "tsc --noEmit",
        "lint": "eslint ./src --ext .ts",
        "lint-fix": "eslint ./src --ext .ts --fix",
        "format": "prettier --write .",
        "test": ""
    },
    "dependencies": {
        "vscode-languageclient": "^8.1.0"
    },
    "devDependencies": {
        "@types/node": "^16.11.7",
        "@types/vscode": "^1.75.0",
        "@typescript-eslint/eslint-plugin": "^5.56.0",
        "@typescript-eslint/parser": "^5.54.0",
        "@vscode/vsce": "^2.18.0",
        "esbuild": "^0.17.12",
        "eslint": "^8.36.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-n": "^15.6.1",
        "eslint-plugin-promise": "^6.1.1",
        "prettier": "^2.8.7",
        "typescript": "^5.0.2"
    }
}
